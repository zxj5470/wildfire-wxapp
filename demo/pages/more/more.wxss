.container{
position : relative;
background:#efefef;
width: 100%;
height: 94%;
}

.title{
position: absolute;
left: 0em;
top: 0em;
padding: 0%;
font-size: 26px;
margin: 0em;
}


.block{
display: inline-block;
flex-direction: row;
height: 200px;
width: 100%;
position: relative;
left: 0%;
padding: 0em;
box-shadow: 4px 3px 10px grey;
background: #fff;
}
.block .name{
position: relative;
left: -35%;
top: 0%;
display: inline-block;
text-align: center; 
text-overflow:ellipsis;
word-wrap:break-word;
}

.block .position{
position: absolute;
left: 68%;
top: 0%;
display: inline-block;
height: 2em;
text-align: center; 
}
.block .introdcution{
position: absolute;
left: 0%;
top: 50%;
display: inline-block;
height: 2em;
text-align: center; 
background: #fff;
z-index: 99;
}
.block .director{
position: absolute;
left: 29%;
top: 0%;
display: inline-block;
height: 2em;
text-align: center; 
margin: 0px;
}
.block .status{
position: relative;
left: 0%;
top: 0%;
border: 1px solid #776e6e;
}

