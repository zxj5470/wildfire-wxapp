.container{
position : relative;
width: 100%;
height: 100%;
}

.bottom{
display : flex;
justify-content: space-between;
height: 6%;
width: 100%;
background:#fff;
position: fixed;
left: 0px;
bottom: 0px;
border-top: 1px solid #776e6e ;
border-radius: 6%;
}

.title{
position: absolute;
left: 0em;
top: 0em;
padding: 0%;
font-size: 48px;
margin: 0em;
}

.block{
display: inline-block;
flex-direction: row;
height: 100px;
width: 100%;
position: relative;
left: 0%;
padding: 0em;
box-shadow: 4px 3px 10px grey;
}

.block .logo{
position: relative;
left: -25%;
top: 0em;
margin: 0em;
padding: 0em;
}

.block .eventName{
position: relative;
left: -10%;
top: -40%;
margin: 0em;
padding: 0em;
}

.block .arrow{
position: absolute;
right: 1em;
bottom: 10%;
margin: 0em;
padding: 0em;
z-index: 99;
}